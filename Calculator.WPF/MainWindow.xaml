<Window x:Class="Calculator.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Number buttons-->
        <Button x:Name="btn7" Grid.Row="3" Grid.Column="0" Click="numericButton_Click">7</Button>
        <Button x:Name="btn8" Grid.Row="3" Grid.Column="1" Click="numericButton_Click">8</Button>
        <Button x:Name="btn9" Grid.Row="3" Grid.Column="2" Click="numericButton_Click">9</Button>
        <Button x:Name="btn4" Grid.Row="4" Grid.Column="0" Click="numericButton_Click">4</Button>
        <Button x:Name="btn5" Grid.Row="4" Grid.Column="1" Click="numericButton_Click">5</Button>
        <Button x:Name="btn6" Grid.Row="4" Grid.Column="2" Click="numericButton_Click">6</Button>
        <Button x:Name="btn1" Grid.Row="5" Grid.Column="0" Click="numericButton_Click">1</Button>
        <Button x:Name="btn2" Grid.Row="5" Grid.Column="1" Click="numericButton_Click">2</Button>
        <Button x:Name="btn3" Grid.Row="5" Grid.Column="2" Click="numericButton_Click">3</Button>
        <Button x:Name="btn0" Grid.Row="6" Grid.Column="1" Click="numericButton_Click">0</Button>

        <!--Calculation Buttons-->
        <Button x:Name="btnPlus" Grid.Row="2" Grid.Column="3" FontWeight="Bold" FontSize="20" Click="calcButton_Click">+</Button>
        <Button x:Name="btnMinus" Grid.Row="3" Grid.Column="3" FontWeight="Bold" FontSize="20" Click="calcButton_Click">-</Button>
        <Button x:Name="btnMultiply" Grid.Row="4" Grid.Column="3" FontWeight="Bold" FontSize="20" Click="calcButton_Click">*</Button>
        <Button x:Name="btnDivide" Grid.Row="5" Grid.Column="3" FontWeight="Bold" FontSize="20" Click="calcButton_Click">/</Button>
        <Button x:Name="btnEquals" Grid.Row="6" Grid.Column="3" Background="Green" FontWeight="Bold" FontSize="20" Click="calcButton_Click">=</Button>

        <!--Clear buttons-->
        <Button x:Name="btnClearEntry" Grid.Row="2" Grid.Column="0" FontWeight="Bold" FontSize="20" Background="Crimson">CE</Button>
        <Button x:Name="btnClear" Grid.Row="2" Grid.Column="1" FontWeight="Bold" FontSize="20">C</Button>
        <Button x:Name="btnBackspace" Grid.Row="2" Grid.Column="2" FontWeight="Bold" FontSize="20" Content="&lt;="></Button>

        <!--Positive and negative-->
        <Button x:Name="btnPlusMinus" Grid.Row="6" Grid.Column="0">+/-</Button>

        <!--Display text box-->
        <TextBox x:Name="txtDisplayFinal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" IsReadOnly="True" TextAlignment="Right" VerticalAlignment="Bottom" BorderThickness="0" FontSize="40">0</TextBox>
        <TextBox x:Name="txtDisplay" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" IsReadOnly="True" TextAlignment="Right" VerticalAlignment="Bottom" BorderThickness="0" FontSize="40">0</TextBox>
    </Grid>


</Window>
